<Styles xmlns="https://github.com/avaloniaui"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="BgBody" Color="#FFFDFDFD" />
                    <SolidColorBrush x:Key="BgHeader" Color="#FFF5F7FA" />
                    <SolidColorBrush x:Key="TextPrimary" Color="#FF222222" />
                    <SolidColorBrush x:Key="Primary" Color="#FF4A90E2" />
                    <SolidColorBrush x:Key="Accent" Color="#FFB0C4DE" />
                    <SolidColorBrush x:Key="Border" Color="#FFE5E7EB" />
                    <SolidColorBrush x:Key="TextSecondary" Color="#664A4A4A" />
                    <SolidColorBrush x:Key="Disabled" Color="#FFF0F1F3" />
                    <SolidColorBrush x:Key="Error" Color="#FFE57373" />
                    <SolidColorBrush x:Key="Success" Color="#FF81C784" />
                    <SolidColorBrush x:Key="Warning" Color="#FFFFF9C4" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Styles.Resources>
</Styles>
        